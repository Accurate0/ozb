datasource db {
    provider = "mongodb"
    url      = "file:dev.db"
}

generator client {
    provider = "cargo run --bin prisma -- generate"
    output   = "../src/prisma.rs"
}

model Posts {
    id              String   @id @default(auto()) @map("_id") @db.ObjectId
    addedAt         DateTime @default(now())
    ozbId           String   @unique
    title           String
    publicationDate DateTime
    link            String
    description     String
    thumbnail       String?
    categories      String[]
}

model RegisteredKeywords {
    id         String   @id @default(auto()) @map("_id") @db.ObjectId
    addedAt    DateTime @default(now())
    keyword    String
    user_id    String
    channel_id String
}

model TriggerIds {
    id      String    @id @default(auto()) @map("_id") @db.ObjectId
    postId  String    @unique
    addedAt DateTime? @default(now())
}

model AuditEntries {
    id String @id @default(auto()) @map("_id") @db.ObjectId

    triggeredAt DateTime @default(now())

    post    Json
    keyword Json
}
